class Solution {
    public int coinChange(int[] coins, int amount) {
        int max = amount + 1;
        int[] arr = new int[max];
        Arrays.fill(arr, max);
        arr[0] = 0;
        for (int i = 1; i < max; i++) {
            for (int j = 0; j < coins.length; j++) {
                if (i >= coins[j]) {
                    arr[i] = Math.min(arr[i], arr[i - coins[j]] + 1);
                }
            }
        }
        return arr[amount] > amount ? -1 : arr[amount]; 
    }
}
