 //字母大小写全排列
 char *  ArratyOfWord(char *str, int len)
 {
	 int i = 0;
	 for (i = 0; i < len; i++)
	 {
		 if (str[i] >= 65 && str[i] <= 90)
		 {
			 str[i] += 32;
		 }
		 else if (str[i] >= 97 && str[i] <= 122)
		 {
			 str[i] -= 32;
		 }
	 }
	 return str;
 }
 int main()
 {
	 char str[] = "a1b2";
	 int len = sizeof(str) / sizeof(str[0]);
	 char * ret = ArratyOfWord(str, len);
	 printf("%s\n", ret);
	 system("pause");
	 return 0;
 }
